    <script>
        function removeAddress(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: 'You won\'t be able to revert this!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, remove it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/deleteAddress',
                        method: 'DELETE',
                        data: { id },
                        success: (response) => {
                            if (response.remove == 1) {
                                Swal.fire({
                                    title: 'Success!',
                                    text: 'Address removed!',
                                    icon: 'success',
                                    timer: 2000,
                                }).then(() => {
                                    window.location.reload();
                                });
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: 'Failed to remove address!',
                                });
                            }
                        },
                        error: (error) => {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: 'Failed to remove address!',
                            });
                        }
                    });
                }
            });
        }

        $(document).ready(function () {
            $('#placeOrderBtn').on('click', function (event) {
    event.preventDefault(); // Prevent the form from submitting by default

    var selectedAddress = $('.address-checkbox:checked').val();
    var selectedPaymentMethod = $('input[name="paymentMethod"]:checked').val();
    var totalAmount = parseFloat('<%= Total %>') || 0;  // Ensure totalAmount is a number
    var totalAmount1 = parseFloat(document.getElementById('newTotal').textContent) || 0;  // Ensure totalAmount1 is a number

    console.log("totalAmount", totalAmount);

    // Check if the payment method is COD and total amount is less than ₹1000
    if (selectedPaymentMethod === "COD" && (totalAmount <=999 && totalAmount1 <=999)) {
        // Prevent form submission if COD is selected and amount is less than ₹1000
        Swal.fire({
            icon: 'warning',
            title: 'Cash on Delivery Unavailable',
            text: 'Cash on Delivery is available only for purchases above ₹1000.',
        });
        return; // Exit the function to stop further execution
    }

    // Validate the selected address
    if (!selectedAddress) {
        Swal.fire({
            icon: 'warning',
            title: 'Address Missing',
            text: 'Please select an address.',
        });
        return;
    }

    // Validate the selected payment method
    if (!selectedPaymentMethod) {
        Swal.fire({
            icon: 'warning',
            title: 'Payment Method Missing',
            text: 'Please select a payment method.',
        });
        return;
    }

    var dataToSend = {
        address: selectedAddress,
        paymentMethod: selectedPaymentMethod,
        totalAmount: totalAmount,
        totalAmount1: totalAmount1
    };

    // Send AJAX request to place the order
    $.ajax({
        type: "POST",
        url: "/placeOrder",
        data: dataToSend,
        success: function (response) {
            if (response.success === true) {
                Swal.fire({
                    title: "Your order has been successfully completed.",
                    icon: "success",
                    showConfirmButton: false,
                    timer: 1500,
                    didClose: () => {
                        window.location.href = `orderPlace/${response.orderid}`;
                    }
                });
            } else if (response.walletFailed === true) {
                Swal.fire({
                    icon: "error",
                    title: "Insufficient Balance In Your Wallet",
                    showConfirmButton: false,
                    timer: 1500,
                });
            } else if (response.message) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: response.message,
                });
            } else {
                razorPayment(response.order);
            }
        },
        error: function (error) {
            console.error('Error placing order:', error);
        }
    });
});


            function razorPayment(order) {
                var options = {
                    key: 'rzp_test_OOxrpqsR7Y8V4y',
                    amount: order.amount * 100,
                    currency: 'INR',
                    name: 'specart',
                    description: 'Test Transaction',
                    image: '/images/my_Logo.png',
                    order_id: order.id,
                    handler: function (response) {
                        verifyPayment(response, order);
                    },
                    prefill: {
                        name: 'Customer Name',
                        email: 'customer@example.com',
                        contact: '1234567890',
                    },
                    notes: {
                        address: order.address,
                    },
                    theme: {
                        color: '#F37254',
                    },
                };

                var razorpayInstance = new Razorpay(options);
                razorpayInstance.open();
            }

            function verifyPayment(payment, order) {
                var amount = '<%= Total %>';
                $.ajax({
                    url: '/verifyPayment',
                    method: 'POST',
                    data: {
                        payment: payment,
                        amount: amount,
                        order: order
                    },
                    success: function (response) {
                        console.log("response", response)
                        if (response.codsuccess === true) {
                            location.href = `/orderPlace/${response.orderid}`;
                        } else {
                            Swal.fire({
                                position: 'center',
                                icon: 'error',
                                title: 'Payment Failed',
                                showConfirmButton: 'false',
                                timer: 1500,
                            });
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error("AJAX request failed:", status, error);
                    },
                });
            }
        });

        function toggleCouponInput() {
            var couponInputContainer = document.getElementById('couponInputContainer');
            couponInputContainer.style.display = couponInputContainer.style.display === 'none' ? 'block' : 'none';
        }

        function applyCoupon(code) {
            var amount = '<%= Total %>';
            $.ajax({
                url: '/couponApply',
                method: 'POST',
                data: {
                    code: code,
                    amount: amount,
                },
                success: (response) => {
                    if (response.user) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops !!',
                            text: 'This coupon already used!',
                        });
                    } else if (response.dateExpired) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops !!',
                            text: 'This coupon has expired!',
                        });
                    } else if (response.notActivated) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops !!',
                            text: 'This coupon is not activated yet!',
                        });
                    } else if (response.insufficientAmount) {
                        Swal.fire({
                            icon: 'warning',
                            title: 'Oops !!',
                            text: 'You can\'t use the coupon. Buy more to meet the minimum spend requirement.',
                        });
                    } else if (response.amountOkay) {
                        var oldTotalElement = document.getElementById('oldTotal');
                        var newTotalElement = document.getElementById('newTotal');
                        oldTotalElement.innerHTML = '<s>' + '<%= Total %>' + '</s>';
                        newTotalElement.textContent = response.disTotal;
                        Swal.fire({
                            position: 'center',
                            icon: 'success',
                            title: 'Discount redeemed',
                            showConfirmButton: false,
                            timer: 1500
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops !!',
                            text: 'Invalid Coupon !!'
                        });
                    }
                },
                error: () => {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops !!',
                        text: 'Something went wrong on the server side!',
                    });
                },
            });
        }

        function unApplyCoupon(code) {
            var amount = document.getElementById('total').innerHTML;
            $.ajax({
                url: '/deleteCoupon',
                method: 'POST',
                data: { code: code, amount: amount },
                success: (response) => {
                    if (response.success) {
                        document.getElementById('total').innerHTML = response.disTotal;
                        document.getElementById('couponDiscount').innerHTML = 0;
                        document.getElementById('apply').style.display = 'block';
                        document.getElementById('unApply').style.display = 'none';
                        Swal.fire({
                            icon: 'warning',
                            title: 'Deleted !!',
                            text: 'Applied coupon is deleted'
                        });
                    }
                },
                error: () => {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops !!',
                        text: 'Failed to unapply the coupon!',
                    });
                },
            });
        }
    </script>

