</main><!-- End .main -->

<script>
    document.getElementById('changePasswordForm').addEventListener('submit', function (event) {
        const newPassword = document.getElementById('newPassword').value;
        const confirmPassword = document.getElementById('cnewPassword').value;

        // Check for strong password criteria (e.g., minimum length, no spaces)
        if (!isStrongPassword(newPassword)) {
            event.preventDefault(); // Prevent form submission
            document.getElementById('newPasswordError').innerHTML = 'Password must be strong.';
        } else {
            document.getElementById('newPasswordError').innerHTML = '';
        }

        // Check if New Password and Confirm Password match
        if (newPassword !== confirmPassword) {
            event.preventDefault(); // Prevent form submission
            document.getElementById('confirmPasswordError').innerHTML = 'Passwords do not match.';
        } else {
            document.getElementById('confirmPasswordError').innerHTML = '';
        }
    });

    // Function to check if a password is strong
    function isStrongPassword(password) {
        // Add your criteria for a strong password (e.g., minimum length, no spaces)
        const minLength = 8;
        const noSpaces = !/\s/.test(password);

        return password.length >= minLength && noSpaces;
    }
    
    function copyToClipboard() {
            // Get the input field
            var copyText = document.getElementById("referralCodeInput");

            // Select the text field
            copyText.select();
            copyText.setSelectionRange(0, 99999); /* For mobile devices */

            // Copy the text inside the text field
            document.execCommand("copy");
            
            Swal.fire({
        icon: 'success',
        title: 'Referral Code Copied!',
        showConfirmButton: false,
        timer: 1500  // The alert will close after 1.5 seconds
    });
    
        }

    function removeAddress(id) {
    // Display confirmation dialog
    Swal.fire({
        title: 'Are you sure?',
        text: 'You won\'t be able to revert this!',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, remove it!'
    }).then((result) => {
        if (result.isConfirmed) {
            // User clicked the confirm button, proceed with the removal
            $.ajax({
                url: '/deleteAddress',
                method: 'delete',
                data: { id },
                success: (response) => {
                    if (response.remove == 1) {
                        // Display success message
                        Swal.fire({
                            title: 'Success!',
                            text: 'Address removed!',
                            icon: 'success',
                            timer: 2000,
                        }).then(() => {
                            window.location.reload();
                        });
                    }
                },
            });
        }
    });
}


</script>
